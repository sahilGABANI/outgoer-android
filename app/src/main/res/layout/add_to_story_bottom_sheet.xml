<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFullTransparent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/zero_dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bottom_sheet_background"
        android:backgroundTint="@color/white_60_opacity"
        android:orientation="vertical"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/addToStoryAppCompatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/label_add_to_your_story"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"/>

        <View
            android:id="@+id/viewDelete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp"
            android:background="@color/colorMapHeader"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="@string/label_cancel"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

</LinearLayout>