<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/half_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.outgoer.base.view.SquareImageView
            android:id="@+id/ivMedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_place_holder_post" />

        <ProgressBar
            android:id="@+id/progressImageLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleSmall" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMediaTypeVideo"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerInParent="true"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_play_post" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMultiplePost"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_my_profile_post_multiple" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivReel"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_my_profile_reel_symbol" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSavePostView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/one_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.outgoer.base.view.SquareImageView
            android:id="@+id/ivMediaPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_place_holder_post" />

        <ProgressBar
            android:id="@+id/progressImagePostLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleSmall" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMultiplePosts"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_my_profile_post_multiple" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivReels"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_reels_icon_saved" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>