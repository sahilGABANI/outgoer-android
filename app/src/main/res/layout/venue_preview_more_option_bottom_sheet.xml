<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFullTransparent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/zero_dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_corner_profile_menu"
        android:orientation="vertical"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_post_delete"
            android:drawablePadding="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_semi_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_12sdp"
            android:text="@string/label_delete"
            android:textAllCaps="false"
            android:textColor="@color/color4AC7F1"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp"
            android:background="@color/white_25_opacity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_post_close"
            android:drawablePadding="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_semi_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_12sdp"
            android:text="@string/label_cancel"
            android:textAllCaps="false"
            android:textColor="@color/color4AC7F1"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

</LinearLayout>