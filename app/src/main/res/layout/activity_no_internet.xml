<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.nointernet.NoInternetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNoInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_24sdp"
            android:src="@drawable/img_no_internet" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoInternet"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/oops"
            android:textColor="@color/white"
            android:textSize="@dimen/_28ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoInternetDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOops"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/no_internet_desc"
            android:textColor="@color/color_E6E6E6"
            android:textSize="@dimen/_12ssp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbTryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:letterSpacing="0.001"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/purple"
            android:fontFamily="@font/inter_medium"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/try_again"
            android:textAllCaps="false"
            android:textColor="@color/md_white"
            android:textSize="@dimen/_12ssp"
            app:cornerRadius="@dimen/_6sdp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>