<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFullTransparent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/zero_dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bottom_sheet_background"
        android:orientation="vertical"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/deleteLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_post_delete"
                android:drawablePadding="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:padding="@dimen/_12sdp"
                android:text="@string/label_delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:visibility="gone" />

            <View
                android:id="@+id/viewDelete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp"
                android:background="@color/white_25_opacity"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_report_user"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:padding="@dimen/_14sdp"
                android:text="@string/label_report"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:visibility="gone" />

            <View
                android:id="@+id/viewReport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp"
                android:background="@color/white_25_opacity"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_post_close"
                android:drawablePadding="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:padding="@dimen/_12sdp"
                android:text="@string/label_cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/blockAppCompatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="@string/block"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <View
                android:id="@+id/blockView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp"
                android:background="@color/white_25_opacity" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reportAppCompatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="@string/label_report"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp"
                android:background="@color/white_25_opacity" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cancelAppCompatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="@string/label_cancel"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>