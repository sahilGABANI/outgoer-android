<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rlVenueCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/venue_category_unselected_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:padding="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/venueCategoryAppCompatImageView"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            tools:src="@drawable/ic_new_venue_category_all" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/venueCategoryAppCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:ellipsize="middle"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/md_white"
            android:textSize="@dimen/_9ssp"
            tools:text="All Categories" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>