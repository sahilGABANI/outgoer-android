<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/newColorPrimary</item>
        <item name="colorPrimaryDark">@color/newColorPrimaryDark</item>
        <item name="colorAccent">@color/newColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/my_custom_font</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

</style>

    <style name="PopupMenuOverlapAnchor" parent="@style/Theme.AppCompat.Light">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="AppThemeFullScreenTransparent" parent="AppThemeFullScreen">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/colorWindowBackground</item>
        <item name="android:navigationBarColor">@color/colorWindowBackground</item>
    </style>

    <style name="BSDialogTheme" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabLayoutTextAppearance</item>
    </style>

    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="textSize">@dimen/_13ssp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="NewCustomTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="textSize">@dimen/_12ssp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="NewHomeReelsTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="NewSavedReelsAndPostTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="textColor">@color/white</item>
        <item name="fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.SocialView" parent="android:Widget.TextView">
        <item name="hashtagColor">?colorAccent</item>
        <item name="mentionColor">?colorAccent</item>
        <item name="hyperlinkColor">?colorAccent</item>
    </style>

    <style name="FollowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:minEms">6</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:text">@string/label_follow</item>
        <item name="android:textColor">@color/md_white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="FollowingButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/md_white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:minEms">6</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:text">@string/label_following</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="FollowButtonSmall" parent="FollowButton">
        <item name="android:minHeight">@dimen/zero_dp</item>
        <item name="android:insetTop">@dimen/zero_dp</item>
        <item name="android:insetBottom">@dimen/zero_dp</item>
        <item name="android:minEms">4</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="FollowingButtonSmall" parent="FollowingButton">
        <item name="android:minHeight">@dimen/zero_dp</item>
        <item name="android:insetTop">@dimen/zero_dp</item>
        <item name="android:insetBottom">@dimen/zero_dp</item>
        <item name="android:minEms">4</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="ButtonSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/md_white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:minHeight">@dimen/zero_dp</item>
    </style>

    <style name="ButtonSmallInvited" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/md_white</item>
        <item name="android:fontFamily">@font/nunito_sans_extra_bold</item>
        <item name="android:minEms">4</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/color1B284B</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:minHeight">@dimen/zero_dp</item>
        <item name="android:insetTop">@dimen/zero_dp</item>
        <item name="android:insetBottom">@dimen/zero_dp</item>
    </style>

<!--AlertDialogCustom -->
    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:background">@color/grey_dark_transparent_80</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>
<!---   -->

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#AEAEB2</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>